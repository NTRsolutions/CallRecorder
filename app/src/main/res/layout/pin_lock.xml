<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setup your pin"
            android:id="@+id/setup"
            android:textAlignment="center"
            android:textSize="28sp"
            android:layout_margin="13dp"
            android:textColor="@color/smooth_red"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter pin"
            android:id="@+id/pin"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_margin="13dp"
            android:textColor="@color/icons"
            />
        <com.alimuzaffar.lib.pin.PinEntryEditText
            android:id="@+id/txt_pin_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:cursorVisible="true"
            android:digits="1234567890"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="4"
            android:textIsSelectable="false"
            android:textSize="20sp"
            app:pinBackgroundDrawable="@drawable/back"
            app:pinAnimationType="popIn"
            app:pinCharacterMask="*"
            app:pinLineStroke="2dp"
            app:pinLineStrokeSelected="4dp"
            app:pinBackgroundIsSquare="false"
            app:pinLineColors="@color/smooth_red_dark"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm pin"
            android:textAlignment="center"
            android:textSize="20sp"
            android:id="@+id/confirm"
            android:layout_marginBottom="13dp"
            android:textColor="@color/icons"
            />
        <com.alimuzaffar.lib.pin.PinEntryEditText
            android:id="@+id/txt_pin_entry2"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:digits="1234567890"
            android:layout_marginLeft="34dp"
            android:layout_marginRight="34dp"
            android:inputType="number"
            android:maxLength="4"
            android:textIsSelectable="true"
            android:textSize="20sp"
            app:pinBackgroundDrawable="@drawable/back"
            app:pinAnimationType="popIn"
            app:pinCharacterMask="*"
            app:pinLineStroke="2dp"
            app:pinLineStrokeSelected="4dp"
            app:pinBackgroundIsSquare="false"
            app:pinLineColors="@color/smooth_red_dark"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/set"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginRight="22dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_bg"
                android:textColor="@color/bright_blue"
                android:text="Set"/>
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/cancel"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:textColor="@color/bright_blue"
                android:background="@drawable/custom_bg"
                android:text="Reset"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
